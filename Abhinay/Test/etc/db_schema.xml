<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="business_registration">
        <column xsi:type="int" name="id" padding="10" unsigned="false" nullable="false"
            identity="true" comment="ID" />
        <column xsi:type="varchar" name="company_name" nullable="false" length="255"
            comment="Company Name" />
        <column xsi:type="varchar" name="incorporate_date" nullable="false" length="255"
            comment="Incorporate Date" />
        <column xsi:type="varchar" name="area" nullable="false" length="255" comment="Area" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>